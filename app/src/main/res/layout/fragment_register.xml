<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="registerViewModelDataBinding"
            type="test.navigation.ui.fragment.register.RegisterViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="25dp"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"
            android:indeterminateTint="@color/purple_200"
            android:indeterminateTintMode="src_atop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtInputNewWord" />

        <EditText
            android:id="@+id/edtInputNewWord"
            android:layout_width="0dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="55dp"
            app:layout_constraintEnd_toStartOf="@id/btnSearch"
            app:layout_constraintStart_toStartOf="parent"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Input new word"
            />

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="Search"
            app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            app:layout_goneMarginTop="50dp"
            android:text="Add to User Pool"
            android:enabled="false"
            app:layout_constraintEnd_toEndOf="@id/btnSearch"
            app:layout_constraintStart_toStartOf="@id/edtInputNewWord"
            app:layout_constraintTop_toBottomOf="@+id/tvMeaning" />

        <TextView
            android:id="@+id/tvMeaning"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/edtInputNewWord"
            app:layout_constraintEnd_toEndOf="@id/btnSearch"
            app:layout_constraintStart_toStartOf="@id/edtInputNewWord" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvWord"
            android:layout_width="match_parent"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnRegister"
            tools:listitem="@layout/item_word" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>